<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StopwatchFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cardPadding"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/card_background"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/cardPadding"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/fragment_stopwatch_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:text="00:00:00.000"
            android:textColor="@color/cardForeground"
            android:textSize="@dimen/cardTextSize" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fragment_stopwatch_play_button"
                    android:layout_width="@dimen/buttonSize"
                    android:layout_height="@dimen/buttonSize"
                    android:layout_marginRight="@dimen/buttonMargin"
                    android:background="@color/buttonBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:tint="@color/buttonForeground" />

                <ImageView
                    android:id="@+id/fragment_stopwatch_pause_button"
                    android:layout_width="@dimen/buttonSize"
                    android:layout_height="@dimen/buttonSize"
                    android:layout_marginRight="@dimen/buttonMargin"
                    android:background="@color/buttonBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_pause_black_24dp"
                    android:tint="@color/buttonForeground" />

                <ImageView
                    android:id="@+id/fragment_stopwatch_stop_button"
                    android:layout_width="@dimen/buttonSize"
                    android:layout_height="@dimen/buttonSize"
                    android:layout_marginRight="@dimen/buttonMargin"
                    android:background="@color/buttonBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_stop_black_24dp"
                    android:tint="@color/buttonForeground" />

                <ImageView
                    android:id="@+id/fragment_stopwatch_delete_button"
                    android:layout_width="@dimen/buttonSize"
                    android:layout_height="@dimen/buttonSize"
                    android:background="@color/buttonBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:tint="@color/buttonForeground" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>